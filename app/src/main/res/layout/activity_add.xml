<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/add_toolbar"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:paddingLeft="10dp"
                  android:paddingTop="10dp"
                  android:paddingRight="10dp"
                  android:orientation="vertical"
        >

        <EditText
            android:id="@+id/add_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="开始你的日记吧"
            android:lines="3"
            android:gravity="top"
            android:clickable="true"
            android:textColorHint="#bdbdbd"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/im_weather"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_wb_sunny_grey_500_18dp"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:id="@+id/add_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天气怎么样"
                android:layout_toRightOf="@+id/im_weather"
                android:layout_alignTop="@+id/im_weather"
                android:textSize="10sp"
                android:clickable="true"
                android:layout_marginStart="6dp"
                />

            <ImageView
                android:id="@+id/im_location2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_location_on_grey_500_18dp"
                android:layout_below="@+id/im_weather"
                android:layout_marginTop="4dp"

                />

            <TextView
                android:id="@+id/add_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在哪儿呢"
                android:textSize="10sp"
                android:layout_toRightOf="@+id/im_location2"
                android:layout_alignTop="@+id/im_location2"
                android:layout_marginStart="6dp"
                />


        </RelativeLayout>


    </LinearLayout>
</LinearLayout>